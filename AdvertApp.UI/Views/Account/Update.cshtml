@model AppUserUpdateDto

<div class="mt-4">
    <div class="px-4 py-2 w-75 mx-auto">
        <a asp-action="ChangePassword" asp-controller="Account" class="text-decoration-none text-info">Şifre Değiştir</a>
    </div>
    <form asp-action="Update" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        <input type="hidden" value="@Model.Id" asp-for="Id"/>
        <input type="hidden" value="@Model.Password" asp-for="Password"/>
        <input type="hidden" value="@Model.GenderId" asp-for="GenderId"/>
        <div class="mb-3">
            <input asp-for="FirstName" class="form-control" placeholder="İsminiz" />
        </div>
        <div class="mb-3">
            <input asp-for="LastName" class="form-control" placeholder="Soyisminiz" />
        </div>
        <div class="mb-3">
            <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adınız" />
        </div>
        <div class="mb-3">
            <input asp-for="Email" class="form-control" placeholder="Mail Adresiniz" />
        </div>
        <div class="mb-3">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon Numaranız" />
        </div>
        <div class="mb-3 d-flex">
            <label>Doğum Tarihiniz :</label>
            <input type="date" asp-for="BirthDate" class="form-control" value="@(DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd"))" min="1900-10-10" max="@(DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd"))" />
        </div>
        <div class="mb-3">
            <input asp-for="School" class="form-control" placeholder="En Son Mezun Olduğunuz Okul" />
        </div>
        <div class="mb-3">
            <input asp-for="City" class="form-control" placeholder="Yaşadığınız Şehir" />
        </div>
        <div class="mb-3 text-center">
            <button class="btn btn-primary w-50" type="submit">Güncelle</button>
        </div>
        <div class="text-danger text-start" asp-validation-summary="All">
        </div>
    </form>
</div>