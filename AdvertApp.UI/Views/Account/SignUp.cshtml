@model UserCreateModel

<div class="mt-4">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        <div class="mb-3">
            <label>İsminiz : </label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Soyisminiz : </label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Kullanıcı Adınız : </label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Mail Adresiniz : </label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Telefon Numaranız : </label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Doğum tarihiniz : </label>
            <input type="date" asp-for="BirthDate" class="form-control" />
        </div>
        <div class="mb-3">
            <label>En Son Mezun Olduğunuz Okul : </label>
            <input asp-for="School" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Yaşadığınız Şehir : </label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="GenderId">
                <option value="0">Cinsiyetiniz</option>
            </select>
        </div>
        <div class="mb-3">
            <label>Şifreniz : </label>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifre Tekrar : </label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
        </div>
        <div class="mb-3 text-end">
            <button class="btn btn-success" type="submit">Kayıt Ol</button>
        </div>
        <div class="text-danger text-start" asp-validation-summary="All">
        </div>
    </form>
</div>