@model AppUserLoginDto

<div class="my-4">
    <form asp-action="SignIn" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        <div class="mb-3">
            <label>Kullanıcı Adınız : </label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifreniz : </label>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Beni Hatırla
            </label>
        </div>
        <div class="mb-3 text-center">
            <button class="btn btn-primary w-50" type="submit">Giriş Yap</button>
        </div>
        <div class="mb-3 text-center">
            <a asp-action="SignUp" asp-controller="Account" class="text-info">Hesabınız yoksa kayıt olmak için tıklayın</a>
        </div>
        <div class="text-danger text-start" asp-validation-summary="All">
        </div>
    </form>
</div>
