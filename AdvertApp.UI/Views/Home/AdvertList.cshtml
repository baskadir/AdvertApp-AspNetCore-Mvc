@model List<AdvertisementListDto>

<div class="container mt-5 mb-3">
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-md-4">
                <div class="card p-3 mb-2">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <div class="ms-2 c-details">
                                <h6 class="mb-0">@Model[i].CompanyName</h6> 
                                <em class="text-muted">@((DateTime.Today-Model[i].CreatedDate).TotalDays) gün önce</em>
                            </div>
                        </div>
                    </div>
                    @*TODO : başvuru sayısını database de tutup burada gösterelim.*@
                <div class="mt-3">
                    <h4 class="heading">
                        <a class="text-decoration-none text-black" asp-action="AdvertDetail" asp-controller="Home" asp-route-id="@Model[i].Id">@Model[i].Title</a>
                    </h4>
                    <p>@Model[i].City</p>
                    <div class="mt-5">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="mt-3"> <span class="text1">32 Applied <span class="text2">of 50 capacity</span></span> </div>
                    </div>
                </div>
                </div>
            </div>
        }
    </div>
</div>